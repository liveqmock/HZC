<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/top_button_line"
    android:layout_marginBottom="-2dip"
    android:background="@drawable/top_tab_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bet_lottery_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/user_new_center_tool_bar_button_bg"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="全部"
            android:textColor="@color/light_purple"
            android:textSize="@dimen/basic_text_size" >
        </TextView>

        <TextView
            android:id="@+id/award_lottery_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/user_new_center_tool_bar_button_bg"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="中奖"
            android:textColor="@color/light_purple"
            android:textSize="@dimen/basic_text_size" >
        </TextView>

        <TextView
            android:id="@+id/charge_lottery_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/user_new_center_tool_bar_button_bg"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="充值"
            android:textColor="@color/light_purple"
            android:textSize="@dimen/basic_text_size" >
        </TextView>

        <TextView
            android:id="@+id/withdraw_lottery_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/user_new_center_tool_bar_button_bg"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="提现"
            android:textColor="@color/light_purple"
            android:textSize="@dimen/basic_text_size" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/point_up_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_shine" />
    </LinearLayout>

</RelativeLayout>