<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_relative"
    android:background="@drawable/top_tab_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/point_up_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_shine" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_new_center_lottery_all_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="全部"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size" >
        </TextView>

        <TextView
            android:id="@+id/user_new_center_lottery_award_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="中奖"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size" >
        </TextView>

        <TextView
            android:id="@+id/user_new_center_lottery_hold_on_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="待开奖"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size"
            android:visibility="gone" >
        </TextView>

        <TextView
            android:id="@+id/user_new_center_lottery_pursuit_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="追号"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size" >
        </TextView>

        <TextView
            android:id="@+id/user_new_center_lottery_uite_buy_inf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="合买"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_text_size" >
        </TextView>
    </LinearLayout>

</RelativeLayout>