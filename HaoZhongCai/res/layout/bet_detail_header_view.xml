<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="7dip"
                    android:paddingTop="7dip" >

                    <ImageView
                        android:id="@+id/lottery_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/lottery_kind"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dip"
                        android:layout_weight="1"
                        android:text="任选九"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large_text_size"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/lottery_term"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/light_purple"
                        android:textSize="@dimen/basic_text_size"
                        android:typeface="monospace" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_devide_line" >
                </ImageView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/win_status_linear"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="订单状态"
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/bet_win_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/moneyLy_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/bet_history_verical_line" />

                    <LinearLayout
                        android:id="@+id/moneyLy"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="奖金"
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/bet_win_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/bet_moneyLy_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/bet_history_verical_line" />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="投注金额"
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/lottery_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="倍数"
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/bet_double_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bet_location_linear"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/bet_location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="方向"
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/bet_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/inf_container_02_left_line"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/bet_history_verical_line"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/inf_container_02"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="玩法"
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/user_bet_method_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </LinearLayout>

            

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_devide_line" >
                </ImageView>

                <RelativeLayout
                    android:id="@+id/recharge_bottom_bt_laout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dip"
                        android:text="投注详情"
                        android:textColor="@color/black"
                        android:textSize="@dimen/basic_text_size" />

                    <ImageView
                        android:id="@+id/rechargr_more_bank_inf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:src="@drawable/icon_down_new" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/extral_inf_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dip"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/award_money_linear"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="理论奖金："
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/award_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inf_container_01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="过关方式："
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/user_bet_guo_guan_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inf_container_04"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/user_bet_location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="投注地址："
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/user_bet_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="下单时间："
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/lottery_order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="订单号码："
                            android:textColor="@color/light_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/lottery_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>
                </LinearLayout>
                    <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_devide_line" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/open_ball_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" android:paddingTop="10dip" android:paddingBottom="10dip">

                    <TextView
                        android:id="@+id/tv_open_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="开奖号码："
                        android:textColor="@color/black"
                        android:textSize="@dimen/basic_text_size" />

                    <com.haozan.caipiao.widget.PredicateLayout
                        android:id="@+id/balls_open"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/lottery_open_code_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/basic_text_size"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/balls_open_bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_devide_line" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:text="投注号码"
            android:textColor="@color/black"
            android:textSize="@dimen/basic_text_size"
            android:typeface="monospace" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_devide_line" >
        </ImageView>
    </LinearLayout>

</LinearLayout>