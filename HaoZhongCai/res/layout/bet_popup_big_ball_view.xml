<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_big_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bet_number_popup_red"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/big_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dip"
            android:textColor="@color/white"
            android:textSize="@dimen/largest_text_size" />

        <TextView
            android:id="@+id/hot_num_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_toRightOf="@+id/big_ball"
            android:paddingTop="2dip"
            android:textColor="@color/white"
            android:textSize="@dimen/smallest_text_size" />
    </RelativeLayout>

</AbsoluteLayout>