<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/click_status"
        android:layout_width="2dip"
        android:layout_height="fill_parent"
        android:background="@drawable/vote_red"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/pursuit_lottery_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size" />

            <TextView
                android:id="@+id/pursuit_lottery_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/list_index_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dip"
                android:textColor="@color/red"
                android:textSize="@dimen/basic_text_size"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pursuit_lottery_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pursuit_lottery_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:drawablePadding="5px"
                android:drawableRight="@drawable/arrow_right"
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/get_open_codes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/open_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/open_codes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/open_codes_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/basic_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/pursuit_lottery_bet_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/pursuit_lottery_bet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dip"
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>