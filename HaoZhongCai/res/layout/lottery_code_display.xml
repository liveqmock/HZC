<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lottery_code_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/view_container_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:paddingBottom="7dip"
        android:paddingTop="7dip" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:button="@drawable/check_box_button_bg"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:focusable="false"
            android:paddingRight="5dip"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/contain_predicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/lottery_code_index"  android:gravity="center_vertical">

            <com.haozan.caipiao.widget.PredicateLayout
                android:id="@+id/lottery_balls_num_03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/lottery_code_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/smaller_text_size"  android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/point_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

</RelativeLayout>