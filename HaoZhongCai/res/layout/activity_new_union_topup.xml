<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/general_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:text="充值" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_title"
            android:src="@drawable/questionmark" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dip"
            android:layout_toRightOf="@+id/help"
            android:src="@drawable/vertical_line" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/topup_bottom_btn"
        android:layout_below="@+id/title_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pay_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="0dip"
                    android:src="@drawable/unionpay_icon" />

                <TextView
                    android:id="@+id/pay_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="0dip"
                    android:text="@string/union_card_topup"
                    android:textColor="@color/light_purple"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recharge_bt_left_dis"
                android:layout_marginRight="@dimen/recharge_bt_right_dis"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/epos_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/spinner_image_button"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/epos_spinner_text"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="8"
                        android:gravity="left"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/large_text_size" />

                    <ImageView
                        android:id="@+id/epos_spinner_icon"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:src="@drawable/spinner_triangle_down" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dip"
                    android:background="@drawable/new_devide_line" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dip"
                    android:background="@drawable/custom_button"
                    android:text="@string/topup_submit"
                    android:textColor="@color/custom_button"
                    android:textSize="@dimen/basic_text_size" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recharge_tips_left_dis"
                android:layout_marginTop="15dip"
                android:text="@string/union_card_recharge_tips01"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/smaller_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recharge_tips_left_dis"
                android:layout_marginTop="5dip"
                android:text="@string/union_card_recharge_tips02"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/smaller_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recharge_tips_left_dis"
                android:layout_marginTop="5dip"
                android:text="@string/union_card_recharge_tips03"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/smaller_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recharge_tips_left_dis"
                android:layout_marginTop="5dip"
                android:text="@string/union_card_recharge_tips04"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/smaller_text_size" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="@dimen/recharge_tips_left_dis"
                android:layout_marginTop="5dip"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/smaller_text_size" />
        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/progress_bar" >
    </include>

    <include
        android:id="@+id/topup_bottom_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/include_topup_bottom_btn" >
    </include>

</RelativeLayout>