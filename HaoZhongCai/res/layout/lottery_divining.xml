<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/general_bg"
    android:orientation="vertical" >

    <!-- 顶部标题 -->

    <RelativeLayout
        android:id="@+id/lottery_divining_lottery_frame_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >

        <TextView
            android:id="@+id/birth_day_hours"
            style="@style/title"
            android:text="幸运选号" />

        <TextView
            android:id="@+id/lottery_divining_back_mstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/analyse_tips_rala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/vertical_line" />

            <Button
                android:id="@+id/click_to_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_title"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="@dimen/basic_text_size" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- 按钮 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lottery_divining_lottery_frame_01"
        android:layout_margin="10dip"
        android:fadingEdge="none" >

        <RelativeLayout
            android:id="@+id/lottery_birthday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/scbzText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:text="生辰八字"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size" />

            <Button
                android:id="@+id/lottery_divning_birthday"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scbzText"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/spinner_image_button"
                android:editable="false"
                android:hint="点击选择生日"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size" />

            <Button
                android:id="@+id/lottery_divning_birthhours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divning_birthday"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/spinner_image_button"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size" />

            <Button
                android:id="@+id/lottery_divning_sexuality"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divning_birthhours"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/spinner_image_button"
                android:editable="false"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size" />

            <ImageView
                android:id="@+id/division"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divning_sexuality"
                android:layout_margin="20dip"
                android:background="@drawable/new_devide_line" />

            <Button
                android:id="@+id/lottery_divning_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/division"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/custom_button_highlight"
                android:editable="false"
                android:text="开始测算"
                android:textColor="@color/white"
                android:textSize="@dimen/basic_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divning_send"
                android:text="@string/lottery_divining_info"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size" />
        </RelativeLayout>
    </ScrollView>
    <!-- 文字 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lottery_divining_lottery_frame_01"
        android:layout_margin="10dip"
        android:fadingEdge="none" >

        <RelativeLayout
            android:id="@+id/lottery_divining_back_todayluck_text_frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_mstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="命宫主星："
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/mstar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_mstar"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日乐透财运："
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/lottery_divining_back_todayluck_text01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/lottery_divining_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_des"
                android:layout_marginLeft="10dip"
                android:text="幸运号码："
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size"
                android:visibility="gone" />

            <com.haozan.caipiao.widget.PredicateLayout
                android:id="@+id/lottery_divining_back_luckynum"
                android:layout_width="190dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divining_title"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/lottery_divining_warning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divining_back_luckynum"
                android:layout_marginLeft="10dip"
                android:gravity="center_horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="10dip"
                android:text="@string/zhiweiwarning"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/smaller_text_size" />

            <Button
                android:id="@+id/lottery_divning_select"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divining_warning"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginTop="35dip"
                android:background="@drawable/custom_button_highlight"
                android:editable="false"
                android:text="幸运号投注"
                android:textColor="@color/white"
                android:textSize="@dimen/basic_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_divning_select"
                android:text=""
                android:textSize="@dimen/basic_text_size" />
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_round"
        android:visibility="gone" />

    <TextView
        android:id="@+id/getting_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="正在获取信息..."
        android:textSize="@dimen/basic_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wheel_layout"
        android:layout_width="fill_parent"
        android:layout_height="180dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_tips_gray"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/custom_button"
                android:text="   取 消   "
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/wheel_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/make_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="  确 定  "
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/large_text_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wheel_view"
            android:layout_margin="5dp"
            android:background="@drawable/new_devide_line" />

       <com.haozan.caipiao.widget.wheelview.WheelView
            android:id="@+id/wheel_view"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip" />
    </LinearLayout>

    <!-- 底部滚轮 -->

    <LinearLayout
        android:id="@+id/wheel_calendar_layout"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_tips_gray"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/calendar_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/custom_button"
                android:text="   取 消   "
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/wheel_calendar_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择日期"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/calendar_make_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/custom_button"
                android:text="  确 定  "
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/large_text_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wheel_calendar_bottom_layout"
            android:layout_margin="5dp"
            android:src="@drawable/new_devide_line" />

        <LinearLayout
            android:id="@+id/wheel_calendar_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_tips_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal" >

           <com.haozan.caipiao.widget.wheelview.WheelView
                android:id="@+id/calendar_year_wheel_view"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dip"
                android:layout_weight="1" />

           <com.haozan.caipiao.widget.wheelview.WheelView
                android:id="@+id/calendar_month_wheel_view"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_weight="1" />

           <com.haozan.caipiao.widget.wheelview.WheelView
                android:id="@+id/calendar_day_wheel_view"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>