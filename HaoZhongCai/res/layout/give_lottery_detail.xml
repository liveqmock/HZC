<?xml version="1.0" encoding="UTF-8"?>
<!-- different from haobai -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/general_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:text="赠送彩票明细" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/kind_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip" />

                <TextView
                    android:id="@+id/lottery_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/kind_img"
                    android:text=""
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/large_text_size"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/lottery_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/large_text_size"
                    android:typeface="monospace" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_devide_line" >
            </ImageView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/icon_margin"
                    android:layout_marginTop="@dimen/icon_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="赠送金额"
                        android:textColor="@color/light_purple"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/basic_text_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bet_history_verical_line" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/icon_margin"
                    android:layout_marginTop="@dimen/icon_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="已领取"
                        android:textColor="@color/light_purple"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/finish_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/basic_text_size" >
                    </TextView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/bet_moneyLy_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bet_history_verical_line"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/icon_margin"
                    android:layout_marginTop="@dimen/icon_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="订单状态"
                        android:textColor="@color/light_purple"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/back_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip"
                        android:text="--"
                        android:textColor="@color/black"
                        android:textSize="@dimen/basic_text_size" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_devide_line" >
            </ImageView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/give_lottery_detail_select"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="赠送详情"
                        android:textColor="@color/dark_purple"
                        android:textSize="@dimen/large_text_size" />

                    <ImageView
                        android:id="@+id/icon_flag_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_down_new" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jczq_list_item_sub_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赠送时间："
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="2dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赠送号码："
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <com.haozan.caipiao.widget.PredicateLayout
                            android:id="@+id/invest_balls"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="2dip"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="每份金额："
                                android:textColor="@color/dark_purple"
                                android:textSize="@dimen/basic_text_size" />

                            <TextView
                                android:id="@+id/trade_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dark_purple"
                                android:textSize="@dimen/basic_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="倍数："
                                android:textColor="@color/dark_purple"
                                android:textSize="@dimen/basic_text_size" />

                            <TextView
                                android:id="@+id/nunms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dark_purple"
                                android:textSize="@dimen/basic_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_devide_line" >
            </ImageView>

            <RelativeLayout
                android:id="@+id/give_lottery_detail_finish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/temp_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="已领取："
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/finished_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/temp_tv1"
                    android:text=""
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <ImageView
                    android:id="@+id/icon_flag_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_up_new" />
            </RelativeLayout>

            <com.haozan.caipiao.widget.ExpandableHeightGridView
                android:id="@+id/grid_given_names"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jczq_list_item_sub_bg"
                android:gravity="center"
                android:horizontalSpacing="3dip"
                android:numColumns="1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dip"
                android:visibility="gone" >
           </com.haozan.caipiao.widget.ExpandableHeightGridView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_devide_line" >
            </ImageView>

            <RelativeLayout
                android:id="@+id/give_lottery_detail_unfinish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/temp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="未领取："
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/unfinished_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/temp_tv"
                    android:text=""
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <ImageView
                    android:id="@+id/icon_flag_unfinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_up_new" />
            </RelativeLayout>

            <com.haozan.caipiao.widget.ExpandableHeightGridView
                android:id="@+id/grid_ungiven_names"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jczq_list_item_sub_bg"
                android:gravity="center"
                android:horizontalSpacing="3dip"
                android:numColumns="1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dip"
                android:visibility="gone" >
           </com.haozan.caipiao.widget.ExpandableHeightGridView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>