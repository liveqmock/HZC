<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wheel_calendar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_tips_gray"
        android:orientation="vertical"
        android:paddingTop="4dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="2dip"
            android:background="@drawable/spinner_image_button" >

            <TextView
                android:id="@+id/start_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="2012年02月10日"
                android:textColor="@color/dark_purple"
                android:textSize="@dimen/basic_text_size"
                android:textStyle="bold"
                android:typeface="monospace" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wheel_calendar_bottom_layout"
            android:layout_margin="5dp"
            android:src="@drawable/new_devide_line" />

        <LinearLayout
            android:id="@+id/wheel_calendar_bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="1dip"
            android:orientation="horizontal" >

            <com.haozan.caipiao.widget.wheelview.WheelView
                android:id="@+id/calendar_year_wheel_view"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dip"
                android:layout_weight="1" />

            <com.haozan.caipiao.widget.wheelview.WheelView
                android:id="@+id/calendar_month_wheel_view"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_weight="1" />

            <com.haozan.caipiao.widget.wheelview.WheelView
                android:id="@+id/calendar_day_wheel_view"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wheel_calendar_bottom_layout"
            android:layout_margin="5dp"
            android:src="@drawable/new_devide_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/calendar_make_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dip"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="确     定"
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size" />

            <TextView
                android:id="@+id/calendar_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:text="取     消 "
                android:textColor="@color/black"
                android:textSize="@dimen/basic_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>