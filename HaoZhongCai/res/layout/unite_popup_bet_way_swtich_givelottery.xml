<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bet_popup_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bet_givelottery"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:background="@drawable/bet_popup_item_not_choose_user_new_center"
        android:gravity="center"
        android:text="送彩票"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/basic_text_size" />

    <TextView
        android:id="@+id/bet_unite"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:background="@drawable/bet_popup_item_not_choose_user_new_center"
        android:gravity="center"
        android:text="合  买"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/basic_text_size" />

    <TextView
        android:id="@+id/bet_directly"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:background="@drawable/bet_popup_item_not_choose_user_new_center"
        android:gravity="center"
        android:text="购  彩"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/basic_text_size" />

    <TextView
        android:id="@+id/bet_add"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="2dip"
        android:background="@drawable/bet_popup_item_not_choose_user_new_center"
        android:gravity="center"
        android:text="加  单"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/basic_text_size" />

</LinearLayout>