<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/general_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/top"
        layout="@layout/bet_special_top" />

    <include
        android:id="@+id/tools"
        android:layout_below="@+id/top"
        layout="@layout/tool_top_bar" />

    <com.haozan.caipiao.view.CustomScrollView
        android:id="@+id/scroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/tools"
        android:layout_marginLeft="@dimen/icon_margin"
        android:layout_marginRight="@dimen/icon_margin" >

        <LinearLayout
            android:id="@+id/dlt_hongqiu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dlt_hongqiu_ball_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/select_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/dlt_hongqiu_text"
                    style="@style/bet_each_individual_text"
                    android:text="红球：0/5个"
                    android:textSize="@dimen/basic_text_size"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/bet_each_individual_layout"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_flag_hongqiu01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dip"
                            android:paddingTop="9dip"
                            android:text="红球"
                            android:textColor="@color/red_text"
                            android:textSize="@dimen/smaller_text_size" />

                        <TextView
                            android:id="@+id/tv_flag_lengre01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冷热"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_flag_yilou01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗漏"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.haozan.caipiao.view.NewBetBallsLayout
                        android:id="@+id/dlt_hongqiu_balls"
                        style="@style/bet_each_individual_balls_layout" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlt_hongqiu_ball_field2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dlt_hongqiu_text2"
                        style="@style/bet_each_individual_text"
                        android:text="拖号：0/6个"
                        android:textSize="@dimen/basic_text_size"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    style="@style/bet_each_individual_layout"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_flag_hongqiu02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dip"
                            android:paddingTop="9dip"
                            android:text="红拖"
                            android:textColor="@color/red_text"
                            android:textSize="@dimen/smaller_text_size" />

                        <TextView
                            android:id="@+id/tv_flag_lengre02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冷热"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_flag_yilou02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗漏"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.haozan.caipiao.view.NewBetBallsLayout
                        android:id="@+id/dlt_hongqiu_balls2"
                        style="@style/bet_each_individual_balls_layout" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_devide_line" />

            <LinearLayout
                android:id="@+id/dlt_lanqiu_ball_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/select_info_lanqiu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="蓝球：胆码可不选，拖码最少两个"
                    android:textColor="@color/dark_purple"
                    android:textSize="@dimen/basic_text_size" />

                <TextView
                    android:id="@+id/dlt_lanqiu_text"
                    style="@style/bet_each_individual_text_blue"
                    android:text="蓝球：0/2个"
                    android:textSize="@dimen/basic_text_size"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/bet_each_individual_layout"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_flag_lanqiu01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dip"
                            android:paddingTop="9dip"
                            android:text="蓝球"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/smaller_text_size" />

                        <TextView
                            android:id="@+id/tv_flag_lengre03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冷热"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_flag_yilou03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗漏"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.haozan.caipiao.view.NewBetBallsLayout
                        android:id="@+id/dlt_lanqiu_balls"
                        style="@style/bet_each_individual_balls_layout" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dlt_lanqiu_ball_field2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/dlt_lanqiu_text2"
                    style="@style/bet_each_individual_text_blue"
                    android:text="拖号： 个"
                    android:textSize="@dimen/basic_text_size"
                    android:visibility="gone" />

                <LinearLayout
                    style="@style/bet_each_individual_layout"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_flag_lanqiu02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dip"
                            android:paddingTop="9dip"
                            android:text="蓝拖"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/smaller_text_size" />

                        <TextView
                            android:id="@+id/tv_flag_lengre04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冷热"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_flag_yilou04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="遗漏"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/smaller_text_size"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.haozan.caipiao.view.NewBetBallsLayout
                        android:id="@+id/dlt_lanqiu_balls2"
                        style="@style/bet_each_individual_balls_layout" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
   </com.haozan.caipiao.view.CustomScrollView>

    <include
        android:id="@+id/bottom"
        layout="@layout/bet_bottom" />

    <include layout="@layout/bet_popup_big_ball_view" />

    <ImageView
        android:id="@+id/img_help_info_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/img_help_info_bg" />

</RelativeLayout>