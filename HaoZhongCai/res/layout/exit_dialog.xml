<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/icon_margin"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="12dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_margin"
            android:src="@drawable/dialog_title_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_margin"
            android:text="提示"
            android:textColor="@color/red_text"
            android:textSize="@dimen/larger_text_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:src="@color/red_text" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/action_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icon_margin"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:background="@drawable/custom_button"
            android:padding="@dimen/icon_margin"
            android:text="注销自动登陆"
            android:textColor="@color/custom_button"
            android:textSize="@dimen/basic_text_size" />

        <Button
            android:id="@+id/action_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icon_margin"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:background="@drawable/custom_button"
            android:padding="@dimen/icon_margin"
            android:text="  退出应用  "
            android:textColor="@color/custom_button"
            android:textSize="@dimen/basic_text_size" />

        <Button
            android:id="@+id/action_third"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icon_margin"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:background="@drawable/custom_button"
            android:padding="@dimen/icon_margin"
            android:text="取  消"
            android:textColor="@color/custom_button"
            android:textSize="@dimen/basic_text_size" />
    </LinearLayout>

</LinearLayout>