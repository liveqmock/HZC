<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/head_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dip"
            android:src="@drawable/dialog_title_icon" />

        <TextView
            android:id="@+id/title_dlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:text="请确认信息"
            android:textColor="@color/black"
            android:textSize="@dimen/basic_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_button"
        android:layout_below="@+id/head_title"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="卡       号："
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/accout_num_dlg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size"
                            android:width="270dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="省        份："
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/accout_bank_name_dlg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="城        市："
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/accout_city_dlg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:text="充值金额："
                            android:textColor="@color/dark_purple"
                            android:textSize="@dimen/basic_text_size" />

                        <TextView
                            android:id="@+id/accout_money_dlg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:textColor="@color/black"
                            android:textSize="@dimen/basic_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/new_devide_line" />

                    <TextView
                        android:id="@+id/recharge_inf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="5dip"
                        android:text="（充值成功将绑定银行卡，如需帮助请与客服联系，QQ：4006326360)"
                        android:textColor="@color/dark_purple"
                        android:textSize="@dimen/smaller_text_size"
                        android:width="270dip" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/new_devide_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/submit_dlg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="确定"
                        android:textSize="@dimen/basic_text_size" />

                    <Button
                        android:id="@+id/cancle_dlg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dip"
                        android:layout_marginLeft="7dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button"
                        android:text="取消"
                        android:textSize="@dimen/basic_text_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>